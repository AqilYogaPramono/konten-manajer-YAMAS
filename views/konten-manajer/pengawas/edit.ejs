<%- include('../../partials/headers/__header-dashboard.ejs', { title: 'Edit Pengawas' }) %>
<%- include('../../partials/navs/__nav-manajer.ejs') %>
<%- include('../../partials/messages/__messages-dashboard.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Pengawas</h4>
                        <form action="/manajer/pengawas/update/<%= pengawas.id %>" method="POST" enctype="multipart/form-data" data-loading>
                            <div class="form-group">
                                <label for="nama_pengawas">Nama Pengawas</label>
                                <input type="text" class="form-control" id="nama_pengawas" name="nama_pengawas" placeholder="Masukkan nama pengawas" value="<%= pengawas.nama_pengawas %>" required>
                            </div>

                            <div class="form-group">
                                <label for="foto_pengawas">Ganti Foto Pengawas</label>
                                <input type="file" class="form-control" id="foto_pengawas" name="foto_pengawas" accept="image/*" data-preview="previewEdit">
                                <div class="mt-2">
                                    <img id="previewEdit" src="<%= pengawas.foto_pengawas ? ('/images/pengawas/' + pengawas.foto_pengawas) : '/images/no-image.png' %>" data-src="<%= pengawas.foto_pengawas ? ('/images/pengawas/' + pengawas.foto_pengawas) : '/images/no-image.png' %>" alt="foto pengawas" style="height:300px;border-radius:8px;object-fit:cover;cursor:zoom-in;" class="img-click-preview">
                                </div>
                            </div>

                            <div class="d-flex">
                                <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                                <a href="/manajer/pengawas" class="btn btn-light" data-loading>Kembali</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-below-navbar modal-top" id="globalImagePreviewModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pratinjau Gambar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <img id="globalImagePreviewEl" src="" alt="preview" style="width:100%;height:auto;display:block;">
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/scripts/__script-dashboard.ejs') %>
